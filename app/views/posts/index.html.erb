<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
    <div class="col text-center">
      <h4>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>