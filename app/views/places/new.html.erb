<%if @current_user%>

<h1>New Place</h1>

<%= form_with :model => @place do |form| %>
  <p>
    <%= form.label "name" %>
    <%= form.text_field "name" %>
  </p>
  <p>
    <%= form.submit class: "btn btn-primary"%>
  </p>
<% end %>


<% else %>
  You must first <a href="/login">login</a> to create a new place.
<% end %>