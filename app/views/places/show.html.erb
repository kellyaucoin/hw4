<%if @current_user%>

<div class="container-fluid">
  <h1><%= @place["name"] %></h1>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</div>

&nbsp;
<div class="container-fluid">
  <div class="row">
    <div class = "col-lg-3">
      <% for post in @posts %>
        <h2><%= post["title"] %></h2>
        <h6><%= post["posted_on"] %></h6>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <p><%= post["description"] %></p>
        <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
    </div>
  </div>
</div>
<% end %>
<% end %>

<% else flash["notice"] = "You must be logged in to post."
end %>
