<%if @current_user%>
<h3><%= @place["name"] %></h3>

<h4>My Posts</h4>
<% for post in @posts %>
  <h5><%= post["title"] %></h5>
  <h6><%= post["posted_on"] %></h6>
  <p><%= post["description"] %></p>
<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>

<% else flash["notice"] = "You must be logged in to post."
end %>