<%if @current_user%>
    <div class="col text-center">
    <h1><%= @place["name"] %></h1>
</div>

<body>
<div class="container">
<div class="row">
<div class="col-md-9">
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
<div class="col-md-8">
  <a href="/places" class="btn-outline-primary">Back to All Places</a>
</div>


<% for post in @posts %>
  <h5><%= post["title"] %></h5>
  <h6><%= post["posted_on"] %></h6>
  <p><%= post["description"] %></p>
<% end %>


<% else flash["notice"] = "You must be logged in to post."
end %>