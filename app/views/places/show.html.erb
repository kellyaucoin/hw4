<%if @current_user%>
    <div class="col text-center">
    <h1><%= @place["name"] %></h1>

<div class="container">
<div class="col mb-9">
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  </div>
<div class="col mb-9">
  <a href="/places" class="btn-outline-primary">Back to All Places</a>
</div>

<div class="col mb-9">
<% for post in @posts %>
  <h5><%= post["title"] %></h5>
  <h6><%= post["posted_on"] %></h6>
  <p><%= post["description"] %></p>
  <% if post.uploaded_image.attached? %>
     <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
  <% else %>
     <img src="<%= post["image"] %>" class="img-fluid">
<% end %>
<% end %>

<% else flash["notice"] = "You must be logged in to post."
end %>
