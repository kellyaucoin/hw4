<!DOCTYPE html>
<html>
  <head>
    <title>Travel Journal Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <p>
      <% if @current_user %>
        Hello, <%= @current_user["username"] %> |
        <a href="/logout">Logout</a>
      <% else %>
        <a href="/login">Login</a> | <a href="/users/new">Signup</a>
      <% end %>
    </p>

    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>
  </body>
</html>
